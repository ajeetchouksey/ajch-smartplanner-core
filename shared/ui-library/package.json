{
  "name": "@smartplanner/ui-library",
  "version": "3.0.0",
  "type": "module",
  "description": "SmartPlanner shared UI component library with accessibility, mobile optimization, and advanced features",
  "author": "SmartPlanner Team",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:smartplanner": "vite --config vite.smartplanner.config.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=accessibility",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "framer-motion": "^11.11.17",
    "react-intersection-observer": "^9.13.1",
    "react-window": "^1.8.10",
    "react-window-infinite-loader": "^1.0.9",
    "react-virtualized-auto-sizer": "^1.0.24",
    "focus-trap-react": "^10.3.0",
    "react-aria": "^3.34.3",
    "react-stately": "^3.32.2",
    "@react-aria/focus": "^3.18.2",
    "@react-aria/interactions": "^3.22.2",
    "@react-aria/live-announcer": "^3.4.0",
    "@react-aria/utils": "^3.25.2",
    "clsx": "^2.1.1",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "jest": "^29.7.0",
    "@jest/environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "axe-core": "^4.10.2",
    "jest-axe": "^9.0.0",
    "prettier": "^3.3.3",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-docs": "^8.4.7",
    "sass": "^1.81.0",
    "postcss": "^8.5.1",
    "autoprefixer": "^10.4.20"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "react",
    "ui-library",
    "components",
    "accessibility",
    "wcag",
    "typescript",
    "vite",
    "smartplanner"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartplanner/smartplanner-core.git",
    "directory": "shared/ui-library"
  },
  "bugs": {
    "url": "https://github.com/smartplanner/smartplanner-core/issues"
  },
  "homepage": "https://github.com/smartplanner/smartplanner-core#readme"
}
